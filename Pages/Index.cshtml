@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="canvas">
    <svg xmlns="http://www.w3.org/2000/svg" width=1000 height=400>
        @foreach (var point in Model.Points)
        {
            <circle cx="@point.X" cy="@point.Y" r="@Model.PointSize" fill="gray" />
        }
        @foreach (var triangle in Model.Triangles)
        {
            <line x1="@triangle.a.X" y1="@triangle.a.Y" x2="@triangle.b.X" y2="@triangle.b.Y" stroke="@Model.Color" />
            <line x1="@triangle.b.X" y1="@triangle.b.Y" x2="@triangle.c.X" y2="@triangle.c.Y" stroke="@Model.Color" />
            <line x1="@triangle.a.X" y1="@triangle.a.Y" x2="@triangle.c.X" y2="@triangle.c.Y" stroke="@Model.Color" />
        }
    </svg>

    @foreach (var color in Model.Colors)
    {
        <form method="post">
            <input type="hidden" value="@color" name="desiredColor"/>
            <button type="submit">Установить цвет - @color</button>
        </form>
    }
</div>
